{
  "private": true,
  "name": "mono",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "build:execa": "lerna exec --scope '@tunnckocore/execa' 'BABEL_ENV=build yarn run build'",
    "postinstall": "lerna bootstrap",
    "lint": "devest lint",
    "lint:ci": "devest lint --runInBand --onlyChanged",
    "test": "devest test",
    "test:ci": "devest test --coverage --runInBand --onlyChanged",
    "type:gen": "lerna exec 'yarn run type:gen'",
    "type:check": "lerna exec --parallel 'yarn run type:check'",
    "dev:test": "jest --watch --bail",
    "dev:lint": "yarn run lint --watch",
    "build": "lerna exec --parallel 'BABEL_ENV=build yarn run build --minify'",
    "postbuild": "yarn run type:gen && yarn run format",
    "precommit": "yarn lint && yarn type:check && yarn test && yarn build && yarn format",
    "commit": "yarn run dry",
    "dry": "git add -A && git commit -sS",
    "format": "prettier '**/*' --write",
    "fresh": "rm -rf {@tunnckocore,packages}/*/node_modules node_modules yarn.lock",
    "bump:alpha": "yarn run bump prerelease --preid alpha",
    "bump": "lerna version --yes --github-release --conventional-commits --message 'chore(release): new versions [skip ci]'",
    "release": "yarn bump:alpha --force-publish && yarn release:publish",
    "release:publish": "lerna publish from-git --yes",
    "import": "lerna import -y",
    "postimport": "rm -f {@tunnckocore,packages}/*/{.{git,es,ed,all-,pret,nyc}*,*.md,LICENSE,*.js}"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@tunnckocore/devest": "^0.6.1-alpha.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^10.12.24",
    "babel-jest": "^24.1.0",
    "babel-plugin-module-resolver": "^3.1.3",
    "eslint": "^5.13.0",
    "eslint-config-tunnckocore": "^3.0.1-alpha.0",
    "eslint-import-resolver-babel-module": "^5.0.1",
    "jest": "^24.1.0",
    "jest-runner-eslint": "^0.7.3",
    "jest-runner-tsc": "^1.4.0",
    "lerna": "^3.11.0",
    "prettier": "^1.16.4",
    "rolldown": "^0.4.1-alpha.0",
    "typescript": "^3.3.3"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "format": "codeframe",
      "quiet": true,
      "cache": true,
      "fix": true
    }
  },
  "browserslist": [
    "node 8",
    "node 10"
  ],
  "workspaces": [
    "packages/*",
    "@tunnckocore/*"
  ],
  "extensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "mjs"
  ]
}
