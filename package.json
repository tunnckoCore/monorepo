{
  "private": true,
  "name": "mono",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "postinstall": "lerna bootstrap",
    "test": "jest --onlyChanged",
    "test:ci": "yarn test --runInBand",
    "test:all": "lerna run test --parallel --since",
    "lint": "jest -c jest-eslint.config.js --onlyChanged",
    "type:gen": "lerna run type:gen",
    "typecheck:slow": "jest -c jest-typecheck.config.js --onlyChanged",
    "tscheck": "lerna run --parallel type:check",
    "dev:test": "jest --watch --bail",
    "dev:lint": "yarn run lint --watch",
    "dev:typecheck:slow": "yarn run typecheck --watch",
    "build": "lerna exec --parallel 'BABEL_ENV=build yarn build'",
    "postbuild": "yarn run type:gen && yarn run format",
    "format": "prettier '**/*' --write",
    "release": "lerna publish -m 'chore: release [skip ci]' --conventional-commits --changelog",
    "import": "lerna import -y",
    "postimport": "rm -f {@tunnckocore,packages}/*/{.{git,es,ed,all-,pret,nyc}*,*.md,LICENSE,*.js}"
  },
  "resolutions": {
    "babel-core": "^7.0.0-bridge.0"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@tunnckocore/ncc": "^0.12.0",
    "@types/jest": "^23.3.12",
    "@types/node": "^10.12.18",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-plugin-module-resolver": "^3.1.2",
    "eslint": "^5.12.0",
    "eslint-config-tunnckocore": "^2.0.0-rc.14",
    "eslint-import-resolver-babel-module": "^5.0.0-beta.1",
    "jest": "^23.6.0",
    "jest-runner-eslint": "^0.7.1",
    "jest-runner-tsc": "^1.3.2",
    "lerna": "^3.10.5",
    "mri": "^1.1.4",
    "prettier": "^1.15.3",
    "typescript": "^3.2.2"
  },
  "jest-runner-eslint": {
    "cliOptions": {
      "format": "codeframe",
      "cache": true,
      "fix": true
    }
  },
  "workspaces": [
    "packages/*",
    "@tunnckocore/*"
  ],
  "extensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "mjs"
  ]
}
