{
  /* Only type-checking */
  "include": ["@tunnckocore/*/src", "@tunnckocore/*/test"],
  // "exclude": ["**/*.d.ts"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "module": "es2015",
    "lib": ["dom", "esnext", "es2015", "es2016", "es2017", "es2018"],
    "noEmit": true,
    "jsx": "preserve"
  }
}
